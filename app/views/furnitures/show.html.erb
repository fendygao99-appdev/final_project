<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Furniture #<%= @furniture.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/furnitures" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_furniture/<%= @furniture.id %>" class="btn btn-block btn-outline-secondary">
          Delete furniture
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Item
      </dt>
      <dd>
        <%= @furniture.item %>
      </dd>

      <dt>
        Original brand
      </dt>
      <dd>
        <%= @furniture.original_brand %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @furniture.category %>
      </dd>

      <dt>
        Condition
      </dt>
      <dd>
        <%= @furniture.condition %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @furniture.owner_id %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @furniture.price %>
      </dd>

      <dt>
        Is available
      </dt>
      <dd>
        <%= @furniture.is_available %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @furniture.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@furniture.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@furniture.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit furniture
    </h2>

    <form action="/modify_furniture/<%= @furniture.id %>"  method="post" >
      <div class="form-group">
        <label for="item_box">
          Item
        </label>

        <input type="text" id="item_box" name="query_item" class="form-control" value="<%= @furniture.item %>">
      </div>

      <div class="form-group">
        <label for="original_brand_box">
          Original brand
        </label>

        <input type="text" id="original_brand_box" name="query_original_brand" class="form-control" value="<%= @furniture.original_brand %>">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category" class="form-control" value="<%= @furniture.category %>">
      </div>

      <div class="form-group">
        <label for="condition_box">
          Condition
        </label>

        <input type="text" id="condition_box" name="query_condition" class="form-control" value="<%= @furniture.condition %>">
      </div>

      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" class="form-control" value="<%= @furniture.owner_id %>">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" class="form-control" value="<%= @furniture.price %>">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="is_available_box" name="query_is_available" value="1" <%= "checked" if @furniture.is_available %>>

        <label class="custom-control-label"
          for="is_available_box">Is available</label>
      </div>

      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" class="form-control" value="<%= @furniture.image %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update furniture
      </button>
    </form>
  </div>
</div>

<hr>
