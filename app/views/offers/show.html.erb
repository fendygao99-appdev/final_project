<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Offer #<%= @offer.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/offers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_offer/<%= @offer.id %>" class="btn btn-block btn-outline-secondary">
          Delete offer
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Furniture
      </dt>
      <dd>
        <%= @offer.furniture_id %>
      </dd>

      <dt>
        Furniture buyer
      </dt>
      <dd>
        <%= @offer.furniture_buyer_id %>
      </dd>

      <dt>
        Offer amount
      </dt>
      <dd>
        <%= @offer.offer_amount %>
      </dd>

      <dt>
        Offer accepted
      </dt>
      <dd>
        <%= @offer.offer_accepted %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@offer.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@offer.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit offer
    </h2>

    <form action="/modify_offer/<%= @offer.id %>"  method="post" >
      <div class="form-group">
        <label for="furniture_id_box">
          Furniture
        </label>

        <input type="text" id="furniture_id_box" name="query_furniture_id" class="form-control" value="<%= @offer.furniture_id %>">
      </div>

      <div class="form-group">
        <label for="furniture_buyer_id_box">
          Furniture buyer
        </label>

        <input type="text" id="furniture_buyer_id_box" name="query_furniture_buyer_id" class="form-control" value="<%= @offer.furniture_buyer_id %>">
      </div>

      <div class="form-group">
        <label for="offer_amount_box">
          Offer amount
        </label>

        <input type="text" id="offer_amount_box" name="query_offer_amount" class="form-control" value="<%= @offer.offer_amount %>">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="offer_accepted_box" name="query_offer_accepted" value="1" <%= "checked" if @offer.offer_accepted %>>

        <label class="custom-control-label"
          for="offer_accepted_box">Offer accepted</label>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update offer
      </button>
    </form>
  </div>
</div>

<hr>
