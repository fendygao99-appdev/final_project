<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Furniture Item
        </th>

        <th>
          Offer Amount (USD)
        </th>

        <th>
          Owner
        </th>

        <th>
          Offer Status
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @offers.where({ :furniture_buyer_id => @current_user.id}).each do |offer| %>
      <tr>

        <td>
          <%= offer.furniture.item %>
        </td>

        <td>
          <%= offer.offer_amount %>
        </td>

        <td>
          <%= offer.furniture.owner.username %>
        </td>

        <td>
          <% if offer.offer_accepted == "accept"%>
          Accepted!!
          <% elsif offer.offer_accepted == "reject"%>
          Rejected
          <% else %>
          Pending
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(offer.created_at) %> ago
        </td>

        <td>
          <a href="/furnitures/<%= offer.furniture.id %>">
            Show furniture details
          </a>
        </td>

        <td>
          <a href="/delete_offer/<%= offer.id %>">
            Delete Offer
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

