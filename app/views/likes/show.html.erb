<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-outline-secondary">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Furniture
      </dt>
      <dd>
        <%= @like.furniture_id %>
      </dd>

      <dt>
        Furniture watcher
      </dt>
      <dd>
        <%= @like.furniture_watcher_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @like.id %>"  method="post" >
      <div class="form-group">
        <label for="furniture_id_box">
          Furniture
        </label>

        <input type="text" id="furniture_id_box" name="query_furniture_id" class="form-control" value="<%= @like.furniture_id %>">
      </div>

      <div class="form-group">
        <label for="furniture_watcher_id_box">
          Furniture watcher
        </label>

        <input type="text" id="furniture_watcher_id_box" name="query_furniture_watcher_id" class="form-control" value="<%= @like.furniture_watcher_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
